<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" type="image/jpg" href="images/noto_icon.jpg">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        
        <link rel="stylesheet" href="fonts/material-icon/css/material-design-iconic-font.min.css">
        <link href="css/style.css" rel="stylesheet"> 
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
        <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" integrity="sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN" crossorigin="anonymous">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous"> 
        {% endblock %}

        {% block javascripts %}
        
        
        <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
         
         
        
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
        
        <nav class="navbar navbar-dark bg-dark navbar navbar-expand-lg navbar-light bg-light">
            <div class="container-fluid">
                <a class="navbar-brand" href={{path('blog')}}>
                    <img src="images/noto_icon.jpg" alt="" width="30" height="24" class="d-inline-block align-text-top">
                        Noto
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                    <a class="nav-link active" aria-current="page" href={{path('blog')}}>Home</a>
                    </li>
                    {% if is_granted('ROLE_EDITOR') %}
                    <li class="nav-item">
                    <a class="nav-link" href={{path('editor')}}>Edit Products</a>
                    </li>
                    {% endif %}
                    {% if is_granted('ROLE_ADMIN') %}
                    <li class="nav-item">
                    <a class="nav-link" href={{ path('admin') }}>Admin Panel</a>
                    </li>
                    {% endif %}
                </ul>
                {% if not app.user %}
                <a href={{ path('signin') }} class="btn btn-outline-success" >Connexion</a>
                {% else %}
                <a href={{ path('profile') }} class="btn btn-outline-success" >Profile</a>
                <a href={{ path('logout') }} class="btn btn-outline-success" >Deconnexion</a>
                {% endif %}
                
                
                </div>
                <a class="btn btn-success btn-sm ml-3" href={{path('cart')}} >
                        <i class="fa fa-shopping-cart"></i> Cart
                        <span class="badge bg-light text-dark">{{app.session.get('panier') |length}}</span>
                    </a>
                
            </div>
        </nav>
        
        
        
        {% block body %}{% endblock %}
        
        <div class="noto-footer" style="margin-top:50%;">
            <div class="container"
                <div class="col-md-12">
                    <p class="text-center">Copyright Wael Chabchoub 2022</p>
                </div>
            </div>
        </div>
        
    </body>
</html>
